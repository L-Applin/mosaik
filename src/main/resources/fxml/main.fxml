    <stylesheets>
        <URL value="@../css/main.css" />
    </stylesheets>

    <ImageView fx:id="mosaicImage" preserveRatio="true" StackPane.alignment="CENTER"/>

    <Pane fx:id="sidebarMenu">
        <effect>
            <DropShadow color="black" offsetX="2." radius="20.0" />
